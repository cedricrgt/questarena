generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum TargetType {
  CHALLENGE
  PARTICIPATION
}

model User {
  id             String          @id @default(uuid())
  userName       String          @unique
  email          String          @unique
  password_hash  String
  avatar_url     String
  created_at     DateTime        @default(now())
  challenges     Challenge[]     @relation("CreatedChallenges")
  participations Participation[]
  votes          Vote[]
}

model Challenge {
  id          String     @id @default(uuid())
  title       String
  description String
  rules       String
  game        String
  difficulty  Difficulty
  created_by  String
  validated   Boolean
  created_at  DateTime   @default(now())
  creator     User       @relation("CreatedChallenges", fields: [created_by], references: [id])
  votes       Vote[]     @relation("ChallengeVotes")
}

model Participation {
  id           String   @id @default(uuid())
  users_id     String
  challenge_id String
  video_url    String
  description  String
  validated    Boolean
  created_at   DateTime @default(now())
  user         User     @relation(fields: [users_id], references: [id])
  votes        Vote[]   @relation("ParticipationVotes")
}

model Vote {
  id            String         @id @default(uuid())
  users_id      String
  target_id     String
  target_type   TargetType
  created_at    DateTime       @default(now())
  user          User           @relation(fields: [users_id], references: [id])
  challenge     Challenge?     @relation("ChallengeVotes", fields: [target_id], references: [id], map: "Vote_challenge_fkey")
  participation Participation? @relation("ParticipationVotes", fields: [target_id], references: [id], map: "Vote_participation_fkey") //Avoid fk name conflict for postgreSQL

  @@unique([users_id, target_id, target_type])
}
